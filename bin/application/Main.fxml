      </ImageView>
      <Label layoutX="66.0" layoutY="341.0" text=" Name:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="tfName" layoutX="136.0" layoutY="342.0" prefHeight="25.0" prefWidth="295.0" />
      <Button fx:id="btnStart" layoutX="217.0" layoutY="405.0" mnemonicParsing="false" onAction="#onStartClicked" prefHeight="27.0" prefWidth="168.0" style="-fx-background-color: #297f62;" text="Start" textFill="#292b2a">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
