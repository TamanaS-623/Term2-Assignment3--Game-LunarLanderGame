      <Label layoutX="258.0" layoutY="607.0" text="Velocity (m/s)">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="696.0" text="Fuel left:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="tfHeight" editable="false" layoutX="463.0" layoutY="697.0" onAction="#onTimer" prefHeight="25.0" prefWidth="103.0" />
      <Label layoutX="460.0" layoutY="411.0" text="Height (m)">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
