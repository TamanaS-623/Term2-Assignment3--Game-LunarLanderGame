<AnchorPane prefHeight="790.0" prefWidth="622.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <Label layoutX="136.0" layoutY="29.0" text="Lunar Lander Game">
